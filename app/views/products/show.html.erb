
<h2>
  <strong>Product:</strong>
  <%= @product.product %>
</h2>

<h3>
  <strong>Price:</strong>
  <%= @product.price %>
</h3>

<h4>
  <strong>Size:</strong>
  <%= @product.size.name %>
</h4>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<%= link_to 'Back', products_path %> |

<% if user_signed_in? %>
    <% if @product.user_id == current_user.id  %>
        <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Destroy', method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
<% end %>